import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class testAttribute {
	
	@Test
    public void testAttributeConstructorAndToString() {
        Attribute attribute = new Attribute("id", "int", "User");
        String expected = "id: int";
        assertEquals(expected, attribute.toString(), "The toString method should return the correct representation");
    }

    @Test
    public void testEqualsWithSameAttributes() {
        Attribute attribute1 = new Attribute("name", "String", "Person");
        Attribute attribute2 = new Attribute("name", "String", "Person");
        assertTrue(attribute1.equals(attribute2), "Attributes with the same name should be considered equal");
    }

    @Test
    public void testEqualsWithDifferentAttributes() {
        Attribute attribute1 = new Attribute("name", "String", "Person");
        Attribute attribute2 = new Attribute("age", "int", "Person");
        assertFalse(attribute1.equals(attribute2), "Attributes with different names should not be considered equal");
    }

    @Test
    public void testEqualsWithDifferentObjectTypes() {
        Attribute attribute = new Attribute("name", "String", "Person");
        String notAnAttribute = "NotAnAttribute";
        assertFalse(attribute.equals(notAnAttribute), "An attribute should not be equal to an object of a different type");
    }

}
