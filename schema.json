{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://url.com/class.schema.json",
    "title": "UML Diagram Schema",
    "description": "Schema for representing a UML diagram",
    "type": "object",
    "properties": {
      "classes": {
        "description": "List of classes in the UML diagram",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "name": {
              "description": "Name of the class",
              "type": "string"
            },
            "attributes": {
              "description": "List of attributes belonging to the class",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Name of the attribute",
                    "type": "string"
                  },
                  "type": {
                    "description": "Data type of the attribute",
                    "type": "string"
                  }
                },
                "required": ["name", "type"]
              }
            },
            "methods": {
              "description": "List of methods belonging to the class",
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "description": "Name of the method",
                    "type": "string"
                  },
                  "returnType": {
                    "description": "Return type of the method",
                    "type": "string"
                  }
                },
                "required": ["name", "returnType"]
              }
            }
          },
          "required": ["name", "attributes", "methods"]
        }
      },
      "relationships": {
        "description": "List of relationships between classes",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "source": {
              "description": "Name of the source class",
              "type": "string"
            },
            "destination": {
              "description": "Name of the destination class",
              "type": "string"
            },
            "type": {
              "description": "Type of relationship",
              "type": "string"
            }
          },
          "required": ["source", "destination", "type"]
        }
      }
    },
    "required": ["classes", "relationships"]
  }

